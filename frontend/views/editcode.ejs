    <script>
        require.config({ paths: { 'vs': 'https://unpkg.com/monaco-editor@latest/min/vs' } });
        
        document.addEventListener('DOMContentLoaded', function() {
            require(['vs/editor/editor.main'], function() {
                const savedCode = localStorage.getItem('code') || getInitialCode('java');
                const savedLanguage = localStorage.getItem('language') || 'java';
                
                // Get the correct element by ID
                const editorElement = document.getElementById('code-editor');
                
                if (editorElement) {
                    window.monacoEditor = monaco.editor.create(editorElement, {
                        value: savedCode,
                        language: savedLanguage,
                        theme: 'vs-dark',
                        automaticLayout: true
                    });
                    
                    document.getElementById('language-select').value = savedLanguage;

                    document.getElementById('language-select').onchange = function() {
                        const selectedLanguage = this.value;
                        const template = getInitialCode(selectedLanguage);
                        window.monacoEditor.setValue(template);
                        monaco.editor.setModelLanguage(window.monacoEditor.getModel(), selectedLanguage);
                        localStorage.setItem('language', selectedLanguage);
                        localStorage.setItem('code', template);
                    };

                    window.monacoEditor.onDidChangeModelContent(() => {
                        const code = window.monacoEditor.getValue();
                        localStorage.setItem('code', code);
                    });
                    
                    // Enhanced Tab functionality with better touch support
                    const tabs = document.querySelectorAll('.tabs button');
                    const contents = document.querySelectorAll('.tab-content > div');

                    tabs.forEach(tab => {
                        // Add both click and touchend events for better mobile experience
                        ['click', 'touchend'].forEach(eventType => {
                            tab.addEventListener(eventType, (e) => {
                                if (eventType === 'touchend') {
                                    e.preventDefault(); // Prevent double firing on touch devices
                                }
                                
                                tabs.forEach(t => t.classList.remove('active'));
                                contents.forEach(content => content.style.display = 'none');

                                tab.classList.add('active');
                                const selectedTab = tab.getAttribute('data-tab');
                                const tabContent = document.querySelector(`.${selectedTab}-content`);
                                
                                if (tabContent) {
                                    tabContent.style.display = 'block';
                                    
                                    // If switching to submissions tab, load submissions
                                    if (selectedTab === 'submissions' && localStorage.getItem('userId')) {
                                        loadUserSubmissions();
                                    }
                                    
                                    // Scroll to the top of the tab content for better UX
                                    tabContent.scrollTop = 0;
                                }
                            });
                        });
                    });
                } else {
                    console.error('Editor element not found');
                }
            });
        });

        function getInitialCode(language) {
            switch (language) {
                case 'java':
                    return 'import java.util.*;\nimport java.lang.*;\nimport java.io.*;\n\nclass Main\n{\n    public static void main(String[] args) throws java.lang.Exception\n    {\n        // your code goes here\n    }\n}';
                case 'cpp':
                    return '#include <bits/stdc++.h>\nusing namespace std;\n\nint main() {\n    // Your code here\n    return 0;\n}';
                case 'python':
                    return '# Your Python code here';
                case 'c':
                    return '#include <stdio.h>\n\nint main() {\n    // Your code here\n    return 0;\n}';
            }
        }
    </script>
    <script>
        // Add this script to the head section to detect if the problem is being solved as part of a contest
        document.addEventListener('DOMContentLoaded', () => {
            const contestNav = document.getElementById('contest-nav');
            const contestNameDisplay = document.getElementById('contest-name-display');
            
            // Check for URL parameters to see if we're in a contest
            const urlParams = new URLSearchParams(window.location.search);
            const contestId = urlParams.get('contestId');
            
            // Function to fetch contest details and update the UI
            async function fetchContestName(id) {
                try {
                    const response = await fetch(`/api/contests/${id}`);
                    if (response.ok) {
                        const contest = await response.json();
                        // Display contest name in the navigation
                        if (contest && contest.name) {
                            contestNameDisplay.textContent = `Contest: ${contest.name}`;
                        }
                    } else {
                        // If contest doesn't exist or can't be fetched, remove it from storage
                        clearContestContext();
                    }
                } catch (error) {
                    console.error('Error fetching contest details:', error);
                    clearContestContext();
                }
            }
            
            // Function to clear contest context when leaving a contest
            function clearContestContext() {
                localStorage.removeItem('currentContestId');
                contestNav.style.display = 'none';
            }
            
            // Function to setup contest navigation
            function setupContestNav(id) {
                // Show the contest navigation
                contestNav.style.display = 'flex';
                
                // Fetch contest name
                fetchContestName(id);
                
                // Add event listener for back button
                document.getElementById('back-to-contest-btn').addEventListener('click', () => {
                    window.location.href = `/contestpage/${id}`;
                });
                
                // Add exit contest mode button
                addExitButton();
            }
            
            // Function to add exit contest button
            function addExitButton() {
                // Check if button already exists
                if (document.querySelector('.exit-contest-btn')) {
                    return;
                }
                
                const exitButton = document.createElement('button');
                exitButton.textContent = 'Exit Contest Mode';
                exitButton.className = 'exit-contest-btn';
                exitButton.style.marginLeft = 'auto';
                exitButton.style.padding = '6px 12px';
                exitButton.style.background = '#6c757d';
                exitButton.style.color = 'white';
                exitButton.style.border = 'none';
                exitButton.style.borderRadius = '4px';
                exitButton.style.cursor = 'pointer';
                
                exitButton.addEventListener('click', () => {
                    if (confirm('Exit contest mode? You can always rejoin the contest from the contests page.')) {
                        clearContestContext();
                    }
                });
                
                contestNav.appendChild(exitButton);
            }
            
            // Store contest ID if present in URL
            if (contestId) {
                // Save the contest ID to local storage
                localStorage.setItem('currentContestId', contestId);
                console.log('Working on contest problem:', contestId);
                
                // Setup contest navigation
                setupContestNav(contestId);
            } else {
                // Check if there's a stored contest ID from a previous visit
                const storedContestId = localStorage.getItem('currentContestId');
                
                if (storedContestId) {
                    // Check if user directly navigated to this problem page
                    const referrer = document.referrer;
                    
                    // If user came from problems list and not from contest page, clear contest context
                    if (referrer.includes('/problems') && !referrer.includes('/contestpage')) {
                        clearContestContext();
                    } else {
                        // Setup contest navigation for returning users
                        setupContestNav(storedContestId);
                    }
                }
            }
        });
    </script>
