<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contests - Code Playground</title>
    <link rel="stylesheet" href="/css/contests.css">
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">
            <a href="/home">
                <img src="lo.png" alt="Logo">
            </a>
        </div>
        <ul class="nav-links">
            <li><a href="/explore">Explore</a></li>
            <li><a href="/problems">Problems</a></li>
            <li><a href="/contests">Contests</a></li>
            <li><a href="/discuss">Discuss</a></li>
            <li><a href="/about">About Us</a></li>
            <li><a href="/profile">ðŸ‘¤</a></li>
        </ul>
    </nav>

    <div class="contest-container">
        <!-- Create Contest Section -->
        <div class="create-contest">
            <a href="create_contest.html" class="btn create-contest-btn">Create Contest</a>
        </div>

        <!-- Join Contest Section -->
        <div class="join-contest">
            <form id="join-contest-form">
                <input type="text" id="contest-code" placeholder="Enter Contest Code" required>
                <button type="submit" class="btn join-contest-btn">Join Contest</button>
            </form>
        </div>
    </div>

    <!-- Upcoming & Ongoing Contests -->
    <section class="contest-section">
        <h2>Upcoming & Ongoing Contests</h2>
        <table class="contest-table">
            <thead>
                <tr>
                    <th>Contest Name</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Difficulty</th>
                    <th>Participants</th>
                    <th>Time Left</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Code Playground Monthly Challenge</td>
                    <td class="start-time">April 10, 2025 18:00</td>
                    <td class="end-time">April 10, 2025 21:00</td>
                    <td>Medium</td>
                    <td>500+</td>
                    <td class="countdown"></td>
                    <td><button class="register-btn" data-contest-id="1">Register Now</button></td>
                </tr>
                <tr>
                    <td>Algorithm Coding Challenge</td>
                    <td class="start-time">April 15, 2025 16:00</td>
                    <td class="end-time">April 15, 2025 19:00</td>
                    <td>Hard</td>
                    <td>800+</td>
                    <td class="countdown"></td>
                    <td><button class="register-btn" data-contest-id="2">Register Now</button></td>
                </tr>
            </tbody>
        </table>
    </section>

    <!-- Past Contests & Leaderboards -->
    <section class="contest-section">
        <h2>Past Contests & Leaderboards</h2>
        <table class="contest-table">
            <thead>
                <tr>
                    <th>Contest Name</th>
                    <th>Winner</th>
                    <th>Leaderboard</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>January Code Challenge</td>
                    <td>JohnDoe123</td>
                    <td><a href="/leaderboard" class="btn">View Leaderboard</a></td>
                </tr>
                <tr>
                    <td>Data Structures Marathon</td>
                    <td>CodeMaster</td>
                    <td><a href="/leaderboard" class="btn">View Leaderboard</a></td>
                </tr>
            </tbody>
        </table>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 Code Playground. All rights reserved.</p>
    </footer>

    <script src="js/contests.js"></script>
    <script>
        // Add event listener to the "Register Now" buttons
        const registerButtons = document.querySelectorAll('.register-btn');
        registerButtons.forEach(button => {
            button.addEventListener('click', () => {
                const contestId = button.dataset.contestId;
                window.location.href = `/contestpage/${contestId}`;
            });
        });
    </script>

</body>

</html>